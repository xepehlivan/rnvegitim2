					uploadCompleted="onUploadCompleted" uploadUrl="/sap/opu/odata/sap/ZRNV_EGITIM_SRV/ImageSet" visible="true"
					beforeUploadStarts="onBeforeUploadStarts" fileTypes="pdf,doc,docx,docm,ppt,pptx,xls,xlsx,jpg,jpeg,png" fileTypeMismatch="onFileTypeMismatch"
					fileSizeExceeded="onFileSizeExceeded" selectionChanged="onSelectionChangeAttachment">
					<up:toolbar>
						<OverflowToolbar>
							<CheckBox id="checkbox" text="{i18n>selectAll}" select="onSelectAllAttachments" visible="false"/>
							<ToolbarSpacer/>
							<Button id="buttonRemove" enabled="false" icon="sap-icon://delete" press="onRemove" type="Transparent" visible="true"/>
							<Button id="buttonDownload" enabled="false" icon="sap-icon://download" press="onDownload" type="Transparent" visible="true"/>
						</OverflowToolbar> 
					</up:toolbar>
				</up:UploadSet> 
